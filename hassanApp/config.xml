<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hassans" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HASSAN</name>
    <description>
        Application for hassan store
    </description>
    <author email="ip7@live.de" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
          <edit-config file="app/src/main/AndroidManifest.xml" 
               mode="merge" target="/manifest/application" 
               xmlns:android="http://schemas.android.com/apk/res/android">
           <application android:usesCleartextTraffic="true" />
           <application android:networkSecurityConfig="@xml/network_security_config" />

              
          </edit-config>
    <!-- you can use any density that exists in the Android project -->
    <splash src="res/screen/android/splash-land-mdpi.png" density="land-hdpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="land-ldpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="land-mdpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="land-xhdpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="land-xxhdpi"/>

    <splash src="res/screen/android/splash-land-mdpi.png" density="port-hdpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="port-ldpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="port-mdpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="port-xhdpi"/>
    <splash src="res/screen/android/splash-land-mdpi.png" density="port-xxhdpi"/>
    </platform>

      <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />

  <icon background="@color/background" density="ldpi" foreground="res/icon/android/english_logopng" />
  <icon background="@color/background" density="mdpi" foreground="res/icon/android/english_logo.png" />
  <icon background="@color/background" density="hdpi" foreground="res/icon/android/english_logo.png" />
  <icon background="@color/background" density="xhdpi" foreground="res/icon/android/english_logo.png" />
  <icon background="@color/background" density="xxhdpi" foreground="res/icon/android/english_logo.png" />
  <icon background="@color/background" density="xxxhdpi" foreground="res/icon/android/english_logo.png" />
  
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


<preference name="SplashScreenDelay" value="10000" />
</widget>
